<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/colorPostBackground"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <TextView
            android:id="@+id/post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/google_sans_medium"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="How To Fuck A Girl ?" />

        <TextView
            android:id="@+id/post_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_title"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/google_sans_regular"
            android:gravity="start"
            android:maxLines="1"
            android:textAllCaps="false"
            android:textSize="16sp"
            tools:text="Learn how to do sex with a girl !gddgghfghfghfghfghfghfghfghfghfdgdfgdfg" />

        <TextView
            android:id="@+id/post_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_description"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:fontFamily="@font/google_sans_regular"
            android:gravity="start"
            android:maxLines="1"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="John Doe" />

        <TextView
            android:id="@+id/post_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_author"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:fontFamily="@font/google_sans_regular"
            android:gravity="start"
            android:maxLines="1"
            android:textSize="12sp"
            tools:text="12 july, 2019" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/post_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/post_thumb_desc" />

    </RelativeLayout>

</LinearLayout>